<div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-sm">
  <!-- Title -->
  <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @article.title %></h1>
  
  <!-- Body -->
  <p class="text-gray-700 text-lg leading-relaxed mb-6"><%= @article.body %></p>

  <!-- Actions -->
  <ul class="flex space-x-4 mb-8">
    <li>
      <%= link_to "Edit", edit_article_path(@article), 
                  class: "text-blue-600 hover:text-blue-800 font-medium transition duration-150" %>
    </li>
    <li>
      <%= link_to "Destroy", article_path(@article), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: "text-red-600 hover:text-red-800 font-medium transition duration-150" %>
    </li>
  </ul>

  <!-- Comments Section -->
  <div class="border-t border-gray-300 pt-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Comments</h2>
    <div class="space-y-4">
      <%= render @article.comments %>
    </div>
  </div>

  <!-- Add a Comment -->
  <div class="mt-8 border-t border-gray-300 pt-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Add a comment:</h2>
    <%= render "comments/form", article: @article %>
  </div>
</div>

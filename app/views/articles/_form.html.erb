<%= form_with model: article, class: "max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-sm" do |form| %>
 <div class="mb-6">
   <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %><br>
   <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
   <% article.errors.full_messages_for(:title).each do |message| %>
     <div class="mt-2 text-sm text-red-600"><%= message %></div>
   <% end %>
 </div>

 <div class="mb-6">
   <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-2" %><br>
   <%= form.text_area :body, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
   <% article.errors.full_messages_for(:body).each do |message| %>
     <div class="mt-2 text-sm text-red-600"><%= message %></div>
   <% end %>
 </div>

 <div class="mb-6">
   <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %><br>
   <%= form.select :status, 
       Visible::VALID_STATUSES, 
       { selected: article.status || 'public' },
       class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
 </div>

 <div class="flex justify-end">
   <%= form.submit class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition duration-150 shadow-sm cursor-pointer" %>
 </div>
<% end %>
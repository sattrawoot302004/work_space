<%= form_with model: [article, article.comments.build], class: "max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md" do |form| %>
  <!-- Commenter Field -->
  <div class="mb-4">
    <%= form.label :commenter, "Your Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :commenter, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  
  <!-- Body Field -->
  <div class="mb-4">
    <%= form.label :body, "Your Comment", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :body, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  
  <!-- Status Field -->
  <div class="mb-4">
    <%= form.label :status, "Visibility", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.select :status, Visible::VALID_STATUSES, 
          { selected: 'public' }, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  
  <!-- Submit Button -->
  <div class="flex justify-end">
    <%= form.submit "Post Comment", class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition duration-150 shadow-sm cursor-pointer" %>
  </div>
<% end %>
